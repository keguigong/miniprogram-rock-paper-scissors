.flex-1 {
    flex: 1;
}

.flex-0 {
    flex: 0;
}

.display-flex {
    display: flex;
    flex-direction: column;
}

/*底*/
.downView{
    height: 100%;
    background: #FAE738;
    text-align: center;
    padding-bottom: env(safe-area-inset-bottom);
    box-sizing: border-box;
}

/*获胜次数*/
.winNum{
    padding-top: 40rpx;
    display: block;
    font-size: 30rpx;  
    color: #363527;
    font-weight:500;
}

/*展示出拳结果*/
.showView{
    display: flex;  
    width: 100%;
    margin-top:30rpx;
}

.gesturesImgL{
    height: 180rpx;
    width: 180rpx;
    margin-left:80rpx;
}

.gesturesImgR{
    height: 180rpx;
    width: 180rpx;
    margin-right:80rpx;
}

.winOrLost{
    color: orangered; 
    flex:1;
    font-size: 30rpx;
    margin-top:75rpx; 
}

/*用户出拳*/
.chooseForUserView{
    margin:40rpx; 
    background: white;
    text-align: center;
    border-radius: 20rpx;
}

.choose-V{
    display: flex;
    margin-top: 40rpx;
}

.choose-view{  
    flex: 1;
    content:none !important;
    /* height: 140rpx;
    width: 140rpx;  */
    border:1px solid white;
}  

.choose-image{
    height: 160rpx;
    width: 160rpx;
    border-radius:80rpx;
}

/*再来*/
.againBtn{
    margin: 80rpx; 
    background: #FAE738;
}